[Unit]
Description=docker-gen autoconfiguration for nginx
Before=nginx.service

[Service]
ExecStartPre=/usr/bin/docker-gen -only-exposed /etc/nginx/nginx-http.tmpl /etc/nginx/nginx-http.conf
ExecStart=/usr/bin/docker-gen -only-exposed -watch -notify "/usr/sbin/nginx -s reload" /etc/nginx/nginx-http.tmpl /etc/nginx/nginx-http.conf
Restart=always

[Install]
WantedBy=nginx.service
